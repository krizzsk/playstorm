<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="320dp" android:layout_height="50dp">
    <FrameLayout android:id="@+id/native_icon_view" style="@style/SmallIconView">
        <ImageView android:id="@+id/native_icon_image_view" style="@style/SmallIconView"/>
    </FrameLayout>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/native_media_content_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/native_ad_content_linear_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:layout_marginHorizontal="2dp">
                <TextView android:id="@+id/native_title_text_view" android:layout_width="wrap_content" android:layout_marginBottom="1dp" android:layout_toLeftOf="@+id/options_view" android:layout_alignParentLeft="true" android:layout_toStartOf="@+id/options_view" android:layout_alignParentStart="true" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallScrollingTitleTextView"/>
                <FrameLayout android:id="@+id/options_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:layout_marginHorizontal="2dp">
                <TextView android:layout_alignParentLeft="true" android:layout_alignParentStart="true" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallAdBadgeTextView"/>
                <Button android:textSize="15sp" android:id="@+id/native_cta_button" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginBottom="2dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.CTAButton"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
